#include <stdio.h>
#include <string.h>
#include <iostream>
using namespace std;
int main() {
    char mondat[200], szavak[50][40];
    int szavak_szama = 0, i = 0, j = 0;
    cout << "Irj egy mondatot: ";
    fgets(mondat, sizeof(mondat), stdin);
    mondat[strcspn(mondat, "\n")] = '\0';
    for (i = 0; mondat[i] != '\0'; i++) {
        if (mondat[i] != ' ') {
            szavak[szavak_szama][j++] = mondat[i];
        } else if (j > 0) {
            szavak[szavak_szama][j] = '\0';
            szavak_szama++;
            j = 0;
        }
    }
    if (j > 0) {
        szavak[szavak_szama][j] = '\0';
        szavak_szama++;
    }
    cout << "Mondat forditva: ";
    for (i = szavak_szama - 1; i >= 0; i--) cout << szavak[i] << ' ';
    return 0;
}
