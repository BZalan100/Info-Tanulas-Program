#include <stdio.h>
#include <string.h>
#include <iostream>
using namespace std;
int main()
{
    char x[99];
    fgets(x, sizeof(x), stdin);
    int k; cin >> k;
    for (int i = 0; i < strlen(x)-1; i++)
    {
        if ((i+1) % k == 0)
            cout << '-';
        else
            cout << x[i];
    }
    return 0;
}
