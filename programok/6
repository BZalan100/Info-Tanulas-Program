#include <iostream>
#include <stdio.h>
#include <string.h>

using namespace std;

int main()
{
    int maganhangzok = 0;
    char szo[99];
    cout << "Irj egy szot: ";
    fgets(szo, sizeof(szo), stdin);
    for (int i = 0; i < strlen(szo); i++)
    {
        if (szo[i] == 'a' || szo[i] == 'e' || szo[i] == 'i' ||
            szo[i] == 'o' || szo[i] == 'u') maganhangzok++;
    }
    cout << "Ebben a szoban ennyi maganhangzo van: " << maganhangzok;
    return 0;
}
